@model COMP003B.Assignment6.Models.Song

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Song</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
</div>
<div class="col-md-4"
    <h4>Artists</h4>
    <ul>
        @foreach (Artist artist in ViewBag.Artists)
        {
            <li>@artist.Name</li>
        }
    </ul>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.SongId">Edit</a> |
